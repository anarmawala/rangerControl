<div class="row">
  <form action="/students/new" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <h2>New Student</h2>
    <div id="identification">
      <h3>Biography</h3>
      <div class="row">
        <div class="medium-6 columns">
          <label>Name
            <input type="text" name="studentName" placeholder="First Middle Last" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>Photo
            <input type="file">
          </label>
        </div>
        <div class="medium-12 columns">
          <label>Address
            <input type="text" name="studentAddress" placeholder="1234 N Sample Ave" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>Phone
            <input type="tel" name="studentPhone" placeholder="1234567890" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>Email
            <input type="email" name="studentEmail" placeholder="student@cps.edu" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>ID
            <input type="text" name="studentID" placeholder="12345678" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>Homeroom
            <select name="studentHID">
              <% Homeroom.order(:HNumber).all.each do |homeroom| %>
                <option value="<%= homeroom.HID %>"><%= homeroom.HNumber %>, <%= Teacher.find_by(:TID => homeroom.TID).TName %></option>
              <% end %>
            </select>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>UGPA
            <input type="number" name="studentUGPA" min="0" max="4.0" step="0.01" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>WGPA
            <input type="number" name="studentWGPA" min="0" max="6" step="0.01" required>
          </label>
        </div>
        <div class="medium-3 columns">
          <label>Absences
            <input type="number" name="studentAbsences" min="0" step="0.1" required>
          </label>
        </div>
        <div class="medium-3 columns">
          <label>Attendance %
            <input type="number" name="studentAttendance" min="0" step="0.1" required>
          </label>
        </div>
        <div class="medium-3 columns">
          <label>Detentions
            <input type="number" name="studentDetentions" min="0" required>
          </label>
        </div>
        <div class="medium-3 columns">
          <label>Tardies
            <input type="number" name="studentTardies" min="0" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>SLHs
            <input type="number" name="studentSLHs" min="0" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>Debt
            <input type="number" name="studentDebt" min="0" step="0.01" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>Credits
            <input type="number" name="studentCredit" min="0" step="0.5" required>
          </label>
        </div>
        <div class="medium-6 columns">
          <label>On Track
            <select name="studentOnTrack">
              <option value="1">Yes</option>
              <option value="0">No</option>
            </select>
          </label>
        </div>
      </div>
      
    </div>
  
    <div id="classes">
      <h3>Classes</h3>
      <div>
        <% for number in 1..10 do %>
          <div class="row">
            <div class="column small-1 middle">
              <label>Period
                <input type="number" value="<%= number %>" disabled>
              </label>
            </div>
            <div class="column small-7">
              <label>Course Name
                <select name="period<%= number %>CourseID">
                  <% Course.order(:CName).all.each do |course| %>
                    <option value="<%= course.CID %>"><%= course.CType %> <%= course.CName %>, <%= Teacher.find_by(:TID => course.TID).TName%></option>
                  <% end %>
                </select>
              </label>
            </div>
            <div class="column small-2">
              <label>Course Grade
                <select name="period<%= number %>Grade">
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="C">C</option>
                  <option value="D">D</option>
                  <option value="F">F</option>
                  <option value=" ">NG</option>
                </select>
              </label>
            </div>
            <div class="column small-2">
              <label>Course Average
                <input name="period<%= number %>Average" type="number" min="0" max="100">
              </label>
            </div>
          </div>
        <% end %>
      </div>
      
    </div>
    
    <div class="input-group-button">
      <input type="submit" class="button" value="Submit">
    </div>
  </form>
</div>