<div class="row">
  <form action="/courses/edit" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <h2>Edit Course</h2>
    <div>
      <div class="medium-12 columns">
        <label>Course Name
          <input name="courseName" type="text" value="<%= @course.CName %>">
        </label>
      </div>
      <div class="medium-12 columns">
        <label>Course ID
          <input name="courseID" type="text" value="<%= @course.CID %>" readonly>
        </label>
      </div>
      <div class="medium-12 columns">
        <label>Course Level
          <select name="courseType">
            <option value="AP" <%= :selected if @course.CType == "AP" %>>Advanced Placement</option>
            <option value="DC" <%= :selected if @course.CType == "DC" %>>Dual Credit</option>
            <option value="H" <%= :selected if @course.CType == "H" %>>Honors</option>
            <option value="R" <%= :selected if @course.CType == "R" %>>Regulars</option>
            <option value="ESL" <%= :selected if @course.CType == "ESL" %>>ESL</option>
          </select>
        </label>
      </div>
      
      <div class="medium-12 columns">
        <label>Teacher Name
          <select name="courseTID">
            <% Teacher.all.each do |teacher| %>
              <option value="<%= teacher.TID %>" <%= :selected if @course.TID == teacher.TID %>>
                <%= teacher.TName %>
              </option>
            <% end %>
          </select>
        </label>
      </div>
    </div>
    
    <div class="input-group-button">
      <input type="submit" class="button" value="Submit">
    </div>
  </form>
</div>